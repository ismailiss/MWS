<Window x:Class="MWSAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="My MWS app" Height="500" Width="400">

    <Grid x:Name="ProgressBar" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Margin="0,0,0,0"  Width="400">
        <TabControl x:Name="TabControl1" TabStripPlacement="Top" Margin="0,0,0,162">
            <TabItem Header="Upload" IsEnabled="False" HorizontalAlignment="Left" Margin="-2,-2,0,0" Width="54">
                <Button x:Name="btnUploadInput" Content="Upload File" HorizontalAlignment="Center" VerticalAlignment="Top" Height="36" Width="250" FontSize="16" FontWeight="Bold" Click="btnUploadInput_Click" MinWidth="4" Margin="0,30,0,0" VerticalContentAlignment="Center"/>
            </TabItem>
            <TabItem Header="Generate"  IsEnabled="False">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="300" Width="394">
                    <Button x:Name="UploadInventory" Content="Upload Inventory File" Click="UploadInventory_Click" Width="250" Padding="0,1,1,1" HorizontalAlignment="Center" Margin="0,45,0,216" IsCancel="True" FontWeight="Bold" FontSize="16" Height="36"/>
                    <Button x:Name="Generate" Content="Generate" HorizontalAlignment="Center" Width="250" FontWeight="Bold" FontSize="16" Margin="0,172,0,8" Click="Generate_Click" Height="38"/>
                    <TextBox x:Name="TVAValue" PreviewTextInput="PreviewTextInput" HorizontalAlignment="Left" Margin="70,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Height="30" TextChanged="TVAValue_TextChanged"/>
                    <TextBox x:Name="AmazonComissionValue" PreviewTextInput="PreviewTextInput" HorizontalAlignment="Left" Margin="250,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" Height="30"/>
                    <Label x:Name="TVALabel" Content="TVA&#xD;&#xA;" HorizontalAlignment="Left" Margin="70,100,0,0" VerticalAlignment="Top" Width="130" Height="30" FontWeight="Bold"/>
                    <Label x:Name="AmazonComissionLabel" Content="Amazon Comission" HorizontalAlignment="Left" Margin="250,100,0,0" VerticalAlignment="Top" Width="130" Height="30" FontWeight="Bold"/>
                </Grid>
            </TabItem>
            <TabItem Header="Email"  IsEnabled="False">
                <Grid RenderTransformOrigin="0.777,0.152">

                    <TextBox x:Name="EmailInput" Text="Email@gmail.com" TextWrapping="Wrap" Width="160" FontSize="16" BorderThickness="1,1,1,1" ClipToBounds="True" Margin="23,29,0,226" HorizontalAlignment="Left" Height="40" />
                    <Button x:Name="AddEmail" Content="Add Email" Click="AddEmail_Click" RenderTransformOrigin="-0.571,8.321" Margin="194,27,105,226" Width="90" Height="40" />
                    <Button x:Name="DeleteEmail" Content="Delete Email" Click="DeleteEmail_Click" Margin="294,29,10,226" Width="90" Height="40" />
                    <ListView x:Name="ListViewEmails" Width="300" Margin="44,117,50,11">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Email" Width="300" 
                        DisplayMemberBinding="{Binding Email, Mode=TwoWay}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>


        <ProgressBar HorizontalAlignment="Center" IsIndeterminate="True" x:Name="myProgressBar" Height="7" Margin="0,366,0,0" VerticalAlignment="Top" Width="213" ValueChanged="ProgressBar_ValueChanged" Visibility="Visible"/>
        <TextBlock x:Name="TextProgressBar" HorizontalAlignment="Center" Margin="0,386,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" TextAlignment="Center" Height="16" Visibility="Visible"><Run Text="message"/><LineBreak/><Run/></TextBlock>
        <TextBlock  x:Name="TextErrorProgressBar"  HorizontalAlignment="Center" Margin="2,410,0,0" Text="error" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="16" TextAlignment="Center" Foreground="#FFFF1313" Visibility="Visible"/>
        <Button x:Name="Next" Content="Next&gt;&gt;" HorizontalAlignment="Left" Margin="160,330,0,0" VerticalAlignment="Top" Width="80" Height="25" Click="Next_Click"/>
        <Button x:Name="Precedent" Content="&lt;&lt;Precedent " HorizontalAlignment="Left" Margin="60,330,0,0" VerticalAlignment="Top" Width="80" Height="25" Click="Precedent_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="259,330,0,0" VerticalAlignment="Top" Width="80" Height="25"/>


    </Grid>
</Window>

