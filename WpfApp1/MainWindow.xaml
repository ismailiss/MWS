<Window x:Class="MWSAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="My MWS app" Height="360" Width="400">
    <Grid x:Name="ProgressBar" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}" Margin="0,0,0,0"  Width="400">

        <Button x:Name="btnUploadInput" Content="Upload File" HorizontalAlignment="Center" VerticalAlignment="Top" Height="36" Width="250" FontSize="16" FontWeight="Bold" Click="btnUploadInput_Click" MinWidth="3" Margin="0,10,10,0"/>
        <Grid x:Name="Add" HorizontalAlignment="Center"  Width="332" Visibility="Visible" Margin="0,80,0,140">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="EmailInput" HorizontalAlignment="Left" Text="Email" TextWrapping="Wrap" Width="202" FontSize="16" Margin="0,-1,0,3" BorderThickness="1,1,1,1" ClipToBounds="True" Height="25"/>
            <Button x:Name="AddEmail" Content="Add Email" Margin="4,-1,0,3" Grid.Column="3" Height="25"/>
        </Grid>
        <Button x:Name="Generer" Content="Send to email" HorizontalAlignment="Center" VerticalAlignment="Top" Width="240" Height="32" FontWeight="Bold" FontSize="16" Margin="0,192,0,0"/>
        <ProgressBar HorizontalAlignment="Left" IsIndeterminate="True" x:Name="myProgressBar" Height="7" Margin="107,242,0,0" VerticalAlignment="Top" Width="213" ValueChanged="ProgressBar_ValueChanged" Visibility="Hidden"/>
        <TextBlock x:Name="TextProgressBar" HorizontalAlignment="Left" Margin="70,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" TextAlignment="Center" Height="16" Visibility="Hidden"><Run Text="message"/><LineBreak/><Run/></TextBlock>
        <TextBlock  x:Name="TextErrorProgressBar"  HorizontalAlignment="Left" Margin="70,290,0,0" Text="error" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="16" TextAlignment="Center" Foreground="#FFFF1313" Visibility="Hidden"/>

    </Grid>
</Window>

